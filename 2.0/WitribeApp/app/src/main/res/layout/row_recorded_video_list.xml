<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:transitionName="shared_element_transition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cell_corner_radius"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.muzammilpeer.smarttvapp.view.SquareImageView
            android:id="@+id/iv_recorded_video_list"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/action_settings"
            android:scaleType="fitXY"
            android:background="@color/colorPrimary"
            android:src="@drawable/bg_placeholder"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="File Name: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorTextTitle"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="--"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/row_normal_font_size"
                    android:maxLines="2"
                    android:gravity="center|left"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="File Size: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorTextTitle"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/tvFileSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="--"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/row_normal_font_size"
                    android:maxLines="2"
                    android:gravity="center|left"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Date Modified: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorTextTitle"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/tvFileLastModified"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="--"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/row_normal_font_size"
                    android:maxLines="2"
                    android:gravity="center|left"
                    android:layout_weight="1" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_context_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_more_vert_black_24dp" />
    </LinearLayout>


</android.support.v7.widget.CardView>